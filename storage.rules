rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Profile pictures
    match /profilePictures/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // Posts
    match /posts/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // Stories
    match /stories/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }
  }
}
